<% if institution.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(institution.errors.count, "error") %>
      prohibited this institution from being saved:
    </h2>

    <ul>
    <% institution.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(institution) do |f| %>
  <div class='field'>
    <%= f.label :name %><br />
    <%= f.text_field :name%>
    </div>
    <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
    </div>
    <div>
     <%= f.label :file_type %>
    <%= f.text_field :file_type%>
    </div>

   <%= f.submit button_label %>
<% end %>


