<section class="jumbotron text-center" >

<h1>Institution info</h1>

    <h2><%= @institution.name %></h2>

    <p>Address: <%= @institution.address %></p>
    <p>File Type: <%= @institution.file_type %></p>

<ul>
  <% @institution.rollovers.by_user(current_user).each do |rollover| %></li>
  <% if rollover.rollover_type == "Incoming"%>
  <li><p><%= link_to rollover.amount, incoming_path(rollover.id)%><p></li>
  <%else %>
   <li> <p><%= link_to rollover.amount, outgoing_path(rollover.id) %></p></li>
  <% end %>
  <% end %>
</ul>

<p><%= link_to "Edit institution", edit_institution_path(@institution)  %></p>
<p><%= link_to "Delete institution", institution_path(@institution), method: :delete, data: { confirm: "Are you sure?" } %></p>
<p><%= link_to "Back", institutions_path(@institution)%></p>

</section>